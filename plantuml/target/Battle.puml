@startuml
class Battle {
    + State : ReactiveProperty<BattleState> <<get>>
    + UpgradablePlayerId : int <<get>>
    + SetState(state:BattleState) : void
    + SetUpgradablePlayer(playerId:int) : void
}
enum BattleState {
    Start,
    Battle,
    Upgrade,
    End,
}
Battle +-- BattleState
@enduml
